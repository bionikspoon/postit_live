# http://editorconfig.org

root = true

[*]
line_length = 120
indent_style = space
indent_size = 2

charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,rst,ini}]
indent_style = space
indent_size = 4

[*.py]
known_first_party = postit_live
multi_line_output = 3
default_section = THIRDPARTY

[*.{css,scss,json,yml,yaml}]

[*.{html}]
indent_size = 3

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
